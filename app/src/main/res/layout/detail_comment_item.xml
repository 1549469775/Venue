<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="1dp"
    android:layout_margin="2.5sp"
    android:clickable="true"
    android:background="?attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.jhon.venue.UI.CircleImageView
            android:id="@+id/img_comment"
            android:src="@drawable/tesst"
            android:layout_margin="10dp"
            android:layout_width="30sp"
            android:layout_height="30sp" />
        <TextView
            android:id="@+id/tv_comment_nickname"
            android:layout_toEndOf="@+id/img_comment"
            android:text="时间都去哪里了"
            android:textSize="18dp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_toEndOf="@+id/img_comment"
            android:layout_below="@+id/tv_comment_nickname"
            android:text="这是一个测试数据，这是一个测试数据这是一个测试数据
这是一个测试数据
这是一个测试数据
这是一个测试数据"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment_delete"
            android:layout_toStartOf="@+id/tv_comment_reply"
            android:layout_below="@+id/tv_comment_content"
            android:text="DELETE"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment_reply"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_comment_content"
            android:text="回复"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>